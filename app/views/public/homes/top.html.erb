<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2>ユーザー名:<%= @user.name %></h2>
    </div>
  </div>
  <div class="row">
    <div class="col_lg_12">
      <h4><%= @user.name %>の投稿一覧</h4>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>[ペットの名前]</th>
            <th>[種類]</th>
            <th>[ペットについて]</th>
            <th>[投稿者]</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @user.posts.each do |post| %>
          <tr>
            <td><%= post.pet_name %></td>
            <td><%= post.genre.genre_name %></td>
            <td><%= post.pet_explanation %></td>
            <td>:<%= post.user.name %></td>
            <td>
              <%= link_to public_post_path(post.id) do %>
                <%= post.post_comments.count %>件のコメント
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <h4>いいねした投稿一覧</h4>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>[ペットの名前]</th>
            <th>[種類]</th>
            <th>[ペットについて]</th>
            <th>[投稿者]</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @favorite_posts.each do |post| %>
          <tr>
            <td><%= post.pet_name %></td>
            <td><%= post.genre.genre_name %></td>
            <td><%= post.pet_explanation %></td>
            <td>
              <%= link_to user.name, public_user_path(post.user.id) do %>
                :<%= post.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to public_post_path(post.id) do %>
                <%= post.post_comments.count %>件のコメント
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
