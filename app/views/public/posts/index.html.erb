<div class="container">
  <div class="row">
    <div class="col_lg_12">
      <table>
        <thead>
          <th>[ペットの名前]</th>
          <th>[種類]</th>
          <th>[ペットについて]</th>
          <th>[投稿者]</th>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.pet_name %></td>
              <td><%= post.genre.genre_name %></td>
              <td><%= post.pet_explanation %></td>
              <td>:<%= post.user.name %></td>
              <td><%= link_to "投稿詳細", public_post_path(post.id) %></td>
              <td>
                <%= link_to public_post_path(post.id) do %>
                  <%= post.post_comments.count %>件のコメント
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
