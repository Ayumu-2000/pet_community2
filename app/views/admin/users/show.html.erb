<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4>ユーザー名:<%= @user.name %></h4>
      <h4>メールアドレス:<%= @user.email %></h4>
      <h4>
        <%= link_to "会員情報編集", edit_admin_user_path(@user.id) %>
      </h4>
      <h4>
        <%= link_to "会員情報削除", admin_user_path(@user.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </h4>
    </div>
  </div>
  <div class="row">
    <div class="col_lg_6">
      <h4><%= @user.name %>の投稿一覧</h4>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>[ペットの名前]</th>
            <th>[種類]</th>
            <th>[ペットについて]</th>
            <th>[投稿者]</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @user.posts.each do |post| %>
          <tr>
            <td><%= post.pet_name %></td>
            <td><%= post.genre.genre_name %></td>
            <td><%= post.pet_explanation %></td>
            <td>
              <%= link_to admin_user_path(post.user.id) do %>
                :<%= post.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_post_path(post.id) do %>
                <%= post.post_comments.count %>件のコメント
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-6">
      <h4>いいねした投稿一覧</h4>
      <table class="table table-hover table-inverse">
        <thead>
          <th>[ペットの名前]</th>
          <th>[種類]</th>
          <th>[ペットについて]</th>
          <th>[投稿者]</th>
          <th></th>
        </thead>
        <tbody>
          <% @favorite_posts.each do |post| %>
          <tr>
            <td><%= post.pet_name %></td>
            <td><%= post.genre.genre_name %></td>
            <td><%= post.pet_explanation %></td>
            <td>
              <%= link_to admin_user_path(post.user.id) do %>
                :<%= post.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_post_path(post.id) do %>
                <%= post.post_comments.count %>件のコメント
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
