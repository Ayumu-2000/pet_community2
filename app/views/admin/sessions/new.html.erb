<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2>管理者ログイン</h2>
      <%= form_with model: @admin, url: admin_session_path do |f| %>
      <table>
        <tbody>
          <tr>
            <td>メールアドレス</td>
            <td>
              <div class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
            </td>
          </tr>
          <tr>
            <td>パスワード</td>
            <td>
              <div class="field">
                <%= f.password_field :password, autocomplete: "current-password" %>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <div class="actions">
                <%= f.submit "管理者ログイン" %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>
