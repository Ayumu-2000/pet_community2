<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4>ジャンル一覧</h4>
      <%= link_to "ジャンル新規作成", new_admin_genre_path %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>[ID]</th>
            <th>[ジャンル名]</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.id %></td>
            <td><%= genre.genre_name %></td>
            <td><%= link_to "ジャンル詳細", admin_genre_path(genre.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>