<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-hover table-inverse">
        <h4>ジャンル::<%= @genre.genre_name %></h4>
        <thead>
          <tr>
            <th>[ペットの名前]</th>
            <th>[ペットについて]</th>
            <th>[投稿者]</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genre.posts.each do |post| %>
          <tr>
            <td><%= post.pet_name %></td>
            <td><%= post.pet_explanation %></td>
            <td>
              <%= link_to admin_user_path(post.user.id) do %>
                :<%= post.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_post_path(post.id) do %>
                <%= post.post_comments.count %>件のコメント
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>